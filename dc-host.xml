<?xml version="1.0" ?>

<host name="local_dc" xmlns="urn:jboss:domain:1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:jboss:domain:1.0 jboss_7_0.xsd">
    <management-interfaces>
        <native-interface interface="loopback" port="9999"/>
        <http-interface interface="public" port="9990"/>
    </management-interfaces>
    <domain-controller>
        <local/>
    </domain-controller>
    <interfaces>
        <interface name="loopback">
            <inet-address value="127.0.0.1"/>
        </interface>
        <interface name="public">
            <any-ipv4-address/>
        </interface>
    </interfaces>
    <jvms>
        <jvm name="default">
            <heap size="64m" max-size="128m"/>
        </jvm>
    </jvms>
</host>